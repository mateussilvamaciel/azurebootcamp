@model gamecatalog.Models.Home
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <a class="" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="images/cloud_treinamentos_-_escolhida_-_1.png" /></a>
    <h5>Host: @Model.hostip</h5>
</div>
<div class="container text-center">
    <div class="row align-items-start">
        <div class="col">
            <div class="card cardlogogame">
                <a href='@Url.Action("Index", "Game", new { _console = 1})'><img class="logogame" src="images/xbox-logo-microsoft.jpg" alt="Card image cap"></a>        
            </div>
        </div>
        <div class="col">
            <div class="card cardlogogame">
                <a href='@Url.Action("Index", "Game", new { _console = 2})'><img class="logogame" src="images/playstation-logo.jpg" alt="Card image cap"></a>
            </div>
        </div>
        <div class="col">
            <div class="card cardlogogame">
                <a href='@Url.Action("Index", "Game", new { _console = 3})'><img class="logogame" src="images/Nintendo_switch_logo.png" alt="Card image cap"></a>
            </div>
        </div>
    </div>
</div>

